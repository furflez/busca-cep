{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "lib": ["es6"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "removeComments": true,                
    "strict": true,                           
    "baseUrl": "./",                       
    "paths": {
        "@models": [".src/models/*"],
        "@controllers": [".src/controllers/*"]
    },                           
   "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
    ],                       
   "esModuleInterop": true,                  
   "forceConsistentCasingInFileNames": true,  
    "resolveJsonModule": true
  }
}
