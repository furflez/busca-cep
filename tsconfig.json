{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "lib": ["es6"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "removeComments": true,                
    "strict": true,                           
    "baseUrl": "./src",                       
    "paths": {
        "@entities/*": ["./entities/*"],
        "@routes/*": ["./routes/*"],
        "@repositories/*": ["./repositories/*"],
        "@usecases/*": ["./usecases/*"],
        "@mocks/*": ["./mocks/*"],
        "@middlewares/*": ["./middlewares/*"]
    },                           
   "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
    ],                       
   "esModuleInterop": true,                  
   "forceConsistentCasingInFileNames": true,  
    "resolveJsonModule": true,
    "strictPropertyInitialization": false
  }
}
